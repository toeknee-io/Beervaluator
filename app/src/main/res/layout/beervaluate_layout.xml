<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/beervaluateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Results"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:backgroundTint="#FFD700"
    />
    <ImageView
        android:id="@+id/beervaluateDialogImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:layout_marginTop="20dp"
    />
    <TextView
        android:id="@+id/beervaluateRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/beervaluateDialogImg"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textSize="24dp"
    />
    <TextView
        android:id="@+id/beervaluateEval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/beervaluateRating"
        android:layout_gravity="center"
        android:layout_marginBottom="27dp"
    />
</LinearLayout>